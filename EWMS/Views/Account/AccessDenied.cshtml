@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied - EWMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>
<body>
    <div class="container" style="max-width:720px;">
        <div class="card shadow-lg border-0">
            <div class="card-body p-5 text-center">
                <div class="mb-4">
                    <i class="fas fa-lock text-danger" style="font-size: 4rem;"></i>
                </div>
                <h2 class="card-title text-danger mb-3">Access Denied</h2>
                <p class="mb-4 text-muted">You do not have permission to access this page. Please log in with an account with appropriate permissions.</p>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="/Account/Login" class="btn btn-primary btn-lg">
                        <i class="fas fa-right-from-bracket"></i> Login to Another Account
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
