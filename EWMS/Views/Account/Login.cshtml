@model EWMS.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="w-full max-w-md bg-white shadow-xl rounded-xl p-8">

    <div class="text-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">EWMS</h1>
        <p class="text-gray-500 text-sm">Enterprise Warehouse Management System</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            @Html.ValidationSummary(false)
        </div>
    }

    <form asp-action="Login" method="post" class="space-y-4">

        <div>
            <label class="block text-sm font-medium text-gray-700">Username</label>
            <input asp-for="Username"
                   class="mt-1 w-full rounded-md border-gray-300 focus:ring-primary focus:border-primary" />
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">Password</label>
            <input asp-for="Password" type="password"
                   class="mt-1 w-full rounded-md border-gray-300 focus:ring-primary focus:border-primary" />
        </div>

        <div class="flex items-center">
            <input asp-for="RememberMe" class="mr-2" />
            <label asp-for="RememberMe" class="text-sm text-gray-600">Remember me</label>
        </div>

        <button type="submit"
                class="w-full bg-primary text-white py-2 rounded-md hover:bg-primary/90">
            Login
        </button>
    </form>
</div>
