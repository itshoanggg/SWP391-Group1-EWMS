@{
    ViewData["Title"] = "Inventory Dashboard";
}



@section Styles {
    <link rel="stylesheet" href="~/css/Inventory/InventoryDashboard.css" />
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chart-line"></i> Inventory Dashboard</h2>
        <div>
            <button class="btn btn-primary" onclick="refreshDashboard()">
                <i class="fas fa-sync-alt"></i> Làm mới
            </button>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Doanh thu tháng này</h6>
                            <h3 class="mb-0" id="kpi-revenue">0</h3>
                            <small class="text-white-50">Tháng hiện tại</small>
                        </div>
                        <div class="icon-box">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Lợi nhuận tháng này</h6>
                            <h3 class="mb-0" id="kpi-profit">0</h3>
                            <small class="text-white-50">Revenue - Cost</small>
                        </div>
                        <div class="icon-box">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Đơn hàng hôm nay</h6>
                            <h3 class="mb-0" id="kpi-orders">0</h3>
                            <small class="text-white-50">Đơn được tạo hôm nay</small>
                        </div>
                        <div class="icon-box">
                            <i class="fas fa-shopping-cart fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Giá trị tồn kho</h6>
                            <h3 class="mb-0" id="kpi-inventory">0</h3>
                            <small class="text-white-50">Tổng giá trị</small>
                        </div>
                        <div class="icon-box">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row 1 -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-3">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-exchange-alt"></i> Nhập - Xuất - Tồn</h5>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-primary active" onclick="updateStockMovement('week', this)">7 ngày</button>
                        <button class="btn btn-outline-primary" onclick="updateStockMovement('month', this)">1 tháng</button>
                        <button class="btn btn-outline-primary" onclick="updateStockMovement('year', this)">1 năm</button>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="stockMovementChart" height="80"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-3">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-chart-area"></i> Số lượng & Doanh thu</h5>
                    <select class="form-select form-select-sm w-auto" onchange="updateSalesRevenue(this.value)">
                        <option value="week">1 tuần</option>
                        <option value="month" selected>1 tháng</option>
                        <option value="year">1 năm</option>
                    </select>
                </div>
                <div class="card-body">
                    <canvas id="salesRevenueChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row 2 -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-line"></i> Xu hướng doanh thu</h5>
                </div>
                <div class="card-body">
                    <canvas id="businessTrendChart" height="80"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-chart-pie"></i> Tỷ trọng sản phẩm</h5>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Activity Tables -->
    <div class="row">
        <div class="col-lg-8 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Hoạt động gần đây</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="activities-table">
                            <thead>
                                <tr>
                                    <th>Loại</th>
                                    <th>Mô tả</th>
                                    <th>Người thực hiện</th>
                                    <th>Thời gian</th>
                                    <th class="text-end">Giá trị</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5" class="text-center">Đang tải...</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-3">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Cảnh báo sản phẩm</h5>
                </div>
                <div class="card-body">
                    <div class="list-group" id="low-stock-list">
                        <div class="text-center">Đang tải...</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ✅ INJECT WarehouseId từ Controller vào JavaScript
        window.warehouseId = @ViewBag.WarehouseId;
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1"></script>
    <script src="~/js/Inventory/InventoryDashboard.js"></script>
}


