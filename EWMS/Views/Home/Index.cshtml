@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_TailwindLayout.cshtml";
}

<div class="max-w-7xl mx-auto p-8">

    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold">Warehouse Dashboard</h1>
        <p class="text-gray-500 mt-1">Overview of warehouse activities</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-4 gap-6 mb-10">

        <div class="bg-white shadow rounded-2xl p-6">
            <h2 class="text-sm text-gray-500">Total Products</h2>
            <p class="text-3xl font-bold text-blue-600 mt-2">1,250</p>
        </div>

        <div class="bg-white shadow rounded-2xl p-6">
            <h2 class="text-sm text-gray-500">Total Transfers</h2>
            <p class="text-3xl font-bold text-indigo-600 mt-2">320</p>
        </div>

        <div class="bg-white shadow rounded-2xl p-6">
            <h2 class="text-sm text-gray-500">Pending Transfers</h2>
            <p class="text-3xl font-bold text-yellow-500 mt-2">12</p>
        </div>

        <div class="bg-white shadow rounded-2xl p-6">
            <h2 class="text-sm text-gray-500">Warehouses</h2>
            <p class="text-3xl font-bold text-green-600 mt-2">5</p>
        </div>

    </div>

    <!-- Recent Transfers -->
    <div class="bg-white shadow rounded-2xl p-6">
        <h2 class="text-xl font-semibold mb-4">Recent Transfers</h2>

        <table class="w-full text-left">
            <thead class="bg-gray-100">
                <tr>
                    <th class="p-3">Transfer ID</th>
                    <th class="p-3">From</th>
                    <th class="p-3">To</th>
                    <th class="p-3">Status</th>
                    <th class="p-3">Date</th>
                </tr>
            </thead>
            <tbody>
                <tr class="border-t">
                    <td class="p-3">TR001</td>
                    <td class="p-3">Warehouse A</td>
                    <td class="p-3">Warehouse B</td>
                    <td class="p-3 text-yellow-500 font-semibold">Pending</td>
                    <td class="p-3">20/02/2026</td>
                </tr>

                <tr class="border-t">
                    <td class="p-3">TR002</td>
                    <td class="p-3">Warehouse C</td>
                    <td class="p-3">Warehouse A</td>
                    <td class="p-3 text-green-600 font-semibold">Approved</td>
                    <td class="p-3">19/02/2026</td>
                </tr>
            </tbody>
        </table>
    </div>

</div>