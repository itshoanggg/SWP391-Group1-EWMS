@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="fw-bold">Welcome to EWMS</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-dark mt-3" asp-controller="SalesOrder" asp-action="Index">
            Go to Sales Orders
        </a>
    }
    else
    {
        <a class="btn btn-primary mt-3" asp-controller="Account" asp-action="Login">
            Login
        </a>
    }
</div>