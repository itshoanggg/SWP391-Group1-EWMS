@model EWMS.Controllers.PurchaseOrderCreateViewModel

@{
    ViewData["Title"] = "Create Purchase Order";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-plus-circle"></i> Create Purchase Order</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Create" method="post" id="createPurchaseOrderForm">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- PO Information -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-gradient-primary text-white">
                        <h5 class="mb-0">PO Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Order Number:</label>
                            <input type="text" class="form-control" value="PO-AUTO" readonly disabled>
                            <small class="text-muted">Auto-generated by the system</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Order Date:</label>
                            <input type="text" class="form-control" value="@DateTime.Now.ToString("dd/MM/yyyy")" readonly disabled>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Expected Receiving Date: <span class="text-danger">*</span></label>
                            <input type="date" asp-for="ExpectedReceivingDate" class="form-control"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                            <small class="text-muted">Expected date to receive goods from supplier</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Person in Charge:</label>
                            <input type="text" class="form-control" value="Purchasing Staff" readonly disabled>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Supplier -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-gradient-danger text-white">
                        <h5 class="mb-0">Supplier</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Name: <span class="text-danger">*</span></label>
                            <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.Suppliers"
                                    id="supplierSelect" required onchange="loadSupplierInfo()">
                                <option value="">-- Select Supplier --</option>
                            </select>
                        </div>

                        <div id="supplierInfo" style="display: none;">
                            <div class="mb-3">
                                <label class="form-label">Supplier Code:</label>
                                <input type="text" class="form-control" id="supplierCode" readonly>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Phone:</label>
                                <input type="text" class="form-control" id="supplierPhone" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product List -->
        <div class="card">
            <div class="card-header bg-gradient-purple text-white">
                <h5 class="mb-0">Product List</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="productTable">
                        <thead class="table-light">
                            <tr>
                                <th width="5%">SKU</th>
                                <th width="35%">PRODUCT NAME</th>
                                <th width="15%">ORDER QTY</th>
                                <th width="20%">UNIT PRICE</th>
                                <th width="20%">TOTAL</th>
                                <th width="5%">ACTION</th>
                            </tr>
                        </thead>
                        <tbody id="productTableBody">
                            <tr class="product-row" data-index="0">
                                <td>
                                    <span class="sku-display"></span>
                                </td>
                                <td>
                                    <select name="Details[0].ProductId" class="form-select product-select" required onchange="updateProduct(this, 0)">
                                        <option value="">-- Select Product --</option>
                                    </select>
                                </td>
                                <td>
                                    <input type="number" name="Details[0].Quantity" class="form-control quantity-input"
                                           min="1" value="1" required onchange="calculateTotal(0)">
                                </td>
                                <td>
                                    <input type="number" name="Details[0].UnitPrice" class="form-control price-input"
                                           min="0" step="1000" required onchange="calculateTotal(0)">
                                </td>
                                <td>
                                    <input type="text" class="form-control total-display" readonly value="0">
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-danger" onclick="removeRow(this)" disabled>
                                        <i class="fas fa-times"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="addProductRow()">
                                        <i class="fas fa-plus"></i> Add Product
                                    </button>
                                </td>
                            </tr>
                            <tr class="table-light">
                                <td colspan="2"><strong>Total SKUs:</strong></td>
                                <td><strong id="totalSKU">0</strong></td>
                                <td colspan="2"><strong>Total Ordered Qty:</strong></td>
                                <td><strong id="totalQuantity">1</strong></td>
                            </tr>
                            <tr class="table-light">
                                <td colspan="2"></td>
                                <td colspan="2"><strong>Total Received Qty:</strong></td>
                                <td colspan="2"><strong id="totalReceived">0</strong></td>
                            </tr>
                            <tr class="table-light">
                                <td colspan="2"></td>
                                <td colspan="2"><strong>Status:</strong></td>
                                <td colspan="2"><strong class="text-success">Fully Stocked</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4 text-end">
            <a asp-action="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-times"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-save"></i> Create Order
            </button>
        </div>
    </form>
</div>


@section Scripts {
    <script src="~/js/PurchaseOrder/PurchaseOrder.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/PurchaseOrder/PurchaseOrder.css" />
}
