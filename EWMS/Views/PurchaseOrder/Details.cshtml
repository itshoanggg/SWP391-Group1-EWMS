@model EWMS.Models.PurchaseOrder

@{
    ViewData["Title"] = "Purchase Order Details";
    Layout = "~/Views/Shared/_LayoutPurchasingStaff.cshtml";
    var totalQty = ViewBag.TotalQuantity;
    var totalAmount = ViewBag.TotalAmount;

    // Determine arrival status
    bool isArrived = false;
    string arrivalStatus = "";
    string arrivalClass = "";
    int daysRemaining = 0;

    if (Model.ExpectedReceivingDate != DateTime.MinValue)
    {
        daysRemaining = (Model.ExpectedReceivingDate.Date - DateTime.Today).Days;

        if (daysRemaining < 0)
        {
            isArrived = true;
            arrivalStatus = "Overdue by " + Math.Abs(daysRemaining) + " day(s)";
            arrivalClass = "text-danger";
        }
        else if (daysRemaining == 0)
        {
            isArrived = true;
            arrivalStatus = "Arriving today";
            arrivalClass = "text-success";
        }
        else
        {
            isArrived = false;
            arrivalStatus = daysRemaining + " day(s) remaining";
            arrivalClass = "text-warning";
        }
    }
}

<link rel="stylesheet" href="~/css/PurchaseOrder/PurchaseOrder.css" />

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-alt"></i> Purchase Order Details</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    <!-- Arrival status alert -->
    @if (Model.ExpectedReceivingDate != DateTime.MinValue)
    {
        <div class="alert alert-@(isArrived ? "success" : "warning") alert-dismissible fade show" role="alert">
            <i class="fas fa-@(isArrived ? "check-circle" : "clock")"></i>
            <strong>Arrival Status:</strong>
            @if (isArrived && Model.Status != "Received" && Model.Status != "PartiallyReceived")
            {
                <span class="@arrivalClass">Goods have arrived at warehouse (expected: @Model.ExpectedReceivingDate.ToString("dd/MM/yyyy"))</span>
            }
            else if (!isArrived)
            {
                <span class="@arrivalClass">Not yet due (@Model.ExpectedReceivingDate.ToString("dd/MM/yyyy")) - @arrivalStatus</span>
            }
            else
            {
                <span class="text-info">Goods have been stocked in</span>
            }
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- PO Information -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-gradient-primary text-white">
                    <h5 class="mb-0">PO Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="text-muted">Order Number:</label>
                            <p class="fw-bold">PO-@Model.PurchaseOrderId.ToString("D4")</p>
                        </div>
                        <div class="col-6">
                            <label class="text-muted">Order Date:</label>
                            <p class="fw-bold">@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    @if (Model.ExpectedReceivingDate != DateTime.MinValue)
                    {
                        <div class="mb-3">
                            <label class="text-muted">Expected Receiving Date:</label>
                            <p class="fw-bold">
                                @Model.ExpectedReceivingDate.ToString("dd/MM/yyyy")
                                <span class="badge @(isArrived ? "bg-success" : "bg-warning")">
                                    @(isArrived ? "Arrived" : $"{daysRemaining} day(s) left")
                                </span>
                            </p>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="text-muted">Person in Charge:</label>
                        <p class="fw-bold">@(Model.CreatedByNavigation?.FullName ?? "N/A")</p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Status:</label>
                        <p>
                            @{
                                var statusBadge = Model.Status switch
                                {
                                    "Pending" => "badge bg-warning text-dark",
                                    "Approved" => "badge bg-info",
                                    "PartiallyReceived" => "badge bg-primary",
                                    "Received" => "badge bg-success",
                                    "Cancelled" => "badge bg-danger",
                                    _ => "badge bg-secondary"
                                };
                                var statusText = Model.Status switch
                                {
                                    "Pending" => "Pending Approval",
                                    "Approved" => "Approved",
                                    "PartiallyReceived" => "Partially Received",
                                    "Received" => "Fully Received",
                                    "Cancelled" => "Cancelled",
                                    _ => Model.Status
                                };
                            }
                            <span class="@statusBadge fs-6">@statusText</span>
                        </p>
                    </div>

                    @if (Model.Status == "Pending")
                    {
                        <div class="mt-4">
                            <button class="btn btn-success btn-sm" onclick="updateStatus('Approved')">
                                <i class="fas fa-check"></i> Approve
                            </button>
                            <button class="btn btn-danger btn-sm" onclick="updateStatus('Cancelled')">
                                <i class="fas fa-times"></i> Cancel Order
                            </button>
                        </div>
                    }

                    @if ((Model.Status == "Approved" || Model.Status == "PartiallyReceived") && isArrived)
                    {
                        <div class="mt-4">
                            <a asp-controller="StockIn" asp-action="Create" asp-route-poId="@Model.PurchaseOrderId"
                               class="btn btn-success btn-lg w-100">
                                <i class="fas fa-inbox"></i> Stock In
                            </a>
                            @if (Model.Status == "PartiallyReceived")
                            {
                                <small class="text-muted d-block mt-2">Order is being partially received. Click to continue receiving.</small>
                            }
                        </div>
                    }
                    else if ((Model.Status == "Approved" || Model.Status == "PartiallyReceived") && !isArrived)
                    {
                        <div class="mt-4">
                            <button class="btn btn-secondary btn-lg w-100" disabled>
                                <i class="fas fa-clock"></i> Not Yet Due for Receiving
                            </button>
                            <small class="text-muted d-block mt-2">Expected receiving date: @Model.ExpectedReceivingDate.ToString("dd/MM/yyyy")</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Supplier -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-gradient-danger text-white">
                    <h5 class="mb-0">Supplier</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted">Name:</label>
                        <p class="fw-bold">@Model.Supplier.SupplierName</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <label class="text-muted">Supplier Code:</label>
                            <p class="fw-bold">NCC-@Model.Supplier.SupplierId</p>
                        </div>
                        <div class="col-6">
                            <label class="text-muted">Phone:</label>
                            <p class="fw-bold">@(Model.Supplier.Phone ?? "N/A")</p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Email:</label>
                        <p class="fw-bold">@(Model.Supplier.Email ?? "N/A")</p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted">Address:</label>
                        <p class="fw-bold">@(Model.Supplier.Address ?? "N/A")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product List -->
    <div class="card">
        <div class="card-header bg-gradient-purple text-white">
            <h5 class="mb-0">Product List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th width="8%">SKU</th>
                            <th width="30%">PRODUCT NAME</th>
                            <th width="12%">ORDER QTY</th>
                            <th width="12%">RECEIVED QTY</th>
                            <th width="12%">REMAINING QTY</th>
                            <th width="15%">UNIT PRICE</th>
                            <th width="18%">TOTAL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.PurchaseOrderDetails)
                        {
                            // Calculate received quantity
                            var receivedQty = Model.StockInReceipts
                            .SelectMany(si => si.StockInDetails)
                            .Where(sid => sid.ProductId == detail.ProductId)
                            .Sum(sid => sid.Quantity);
                            var remainingQty = detail.Quantity - receivedQty;

                            <tr>
                                <td>
                                    <span class="badge bg-primary">SKU-@detail.ProductId.ToString("D5")</span>
                                </td>
                                <td>
                                    <strong>@detail.Product.ProductName</strong><br>
                                    <small class="text-muted">@(detail.Product.Category?.CategoryName ?? "N/A")</small>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">@detail.Quantity</span>
                                </td>
                                <td class="text-center">
                                    @if (receivedQty > 0)
                                    {
                                        <span class="badge bg-success">@receivedQty</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">0</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (remainingQty > 0)
                                    {
                                        <span class="badge bg-warning text-dark">@remainingQty</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Complete</span>
                                    }
                                </td>
                                <td class="text-end">@detail.UnitPrice.ToString("N0") đ</td>
                                <td class="text-end"><strong>@detail.TotalPrice?.ToString("N0") đ</strong></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="2"><strong>Total SKUs:</strong></td>
                            <td class="text-center"><strong>@Model.PurchaseOrderDetails.Count</strong></td>
                            <td colspan="3"><strong>Total Ordered Qty:</strong></td>
                            <td colspan="2"><strong>@totalQty</strong></td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="3"><strong>Grand Total:</strong></td>
                            <td colspan="3"><strong class="text-danger fs-5">@totalAmount.ToString("N0") đ</strong></td>
                        </tr>
                    </tfoot>
                </table>
                @if (Model.Status == "Ordered")
                {
                    <div class="mt-3">
                        <button class="btn btn-danger"
                                onclick="cancelPurchaseOrder(@Model.PurchaseOrderId)">
                            <i class="fas fa-times"></i> Cancel Order
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/PurchaseOrder/PurchaseOrder.js"></script>
}
