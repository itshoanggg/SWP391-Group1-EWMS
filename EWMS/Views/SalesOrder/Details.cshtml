@model EWMS.ViewModels.SalesOrderViewModel

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_LayoutSalesStaff.cshtml";
}

<div class="page-header">
    <h1>Order Details @Model.OrderNumber</h1>
    <p>View detailed order information</p>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Order Information</h3>
        <div class="d-flex gap-2">
            @if (Model.Status == "Pending")
            {
                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#cancelOrderModal">
                    <i class="bi bi-x-circle"></i> Cancel Order
                </button>
            }
            <button onclick="window.print()" class="btn btn-success btn-sm">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Export PDF
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Back</a>
        </div>
    </div>

    <div class="card-body">
        <div class="detail-section">
            <h4>Order Information</h4>
            <div class="detail-grid">
                <div class="detail-item">
                    <div class="detail-label">Order ID:</div>
                    <div class="detail-value">@Model.OrderNumber</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Status:</div>
                    <div class="detail-value">
                        @{
                            var badgeClass = Model.Status switch
                            {
                                "Pending" => "badge-pending",
                                "Partial" => "badge-partial",
                                "Completed" => "badge-completed",
                                "Canceled" => "badge-rejected",
                                _ => "badge-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@Model.Status</span>
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Created Date:</div>
                    <div class="detail-value">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Expected Delivery:</div>
                    <div class="detail-value">@Model.ExpectedDeliveryDate.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Warehouse:</div>
                    <div class="detail-value">@Model.WarehouseName</div>
                </div>
            </div>
        </div>

        <div class="detail-section">
            <h4>Customer Information</h4>
            <div class="detail-grid">
                <div class="detail-item">
                    <div class="detail-label">Customer Name:</div>
                    <div class="detail-value">@Model.CustomerName</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">Phone Number:</div>
                    <div class="detail-value">@Model.CustomerPhone</div>
                </div>
                <div class="detail-item" style="grid-column: 1 / -1;">
                    <div class="detail-label">Address:</div>
                    <div class="detail-value">@Model.CustomerAddress</div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <div class="detail-section">
                <h4>Notes</h4>
                <div class="detail-grid">
                    <div class="detail-item" style="grid-column: 1 / -1;">
                        <div class="detail-value" style="background-color: #f8f9fa; padding: 15px; border-radius: 8px; border-left: 4px solid #3498db;">
                            @Model.Notes
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="detail-section">
            <h4>Product Details</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="text-end">Quantity</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.Details)
                        {
                            <tr>
                                <td>@detail.ProductName</td>
                                <td class="text-end">@detail.Quantity @detail.Unit</td>
                                <td class="text-end">@detail.UnitPrice.ToString("N0") ₫</td>
                                <td class="text-end">@detail.TotalPrice.ToString("N0") ₫</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-active">
                            <td colspan="3" class="text-end"><strong>Grand Total:</strong></td>
                            <td class="text-end"><strong style="color: var(--accent);">@Model.TotalAmount.ToString("N0") ₫</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Order Confirmation Modal -->
<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="cancelOrderModalLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Cancel Order
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center py-3">
                    <i class="bi bi-exclamation-circle text-warning" style="font-size: 4rem;"></i>
                    <h5 class="mt-3 mb-2">Are you sure?</h5>
                    <p class="text-muted mb-0">
                        You are about to cancel order <strong>@Model.OrderNumber</strong>.<br />
                        This action cannot be undone.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg"></i> No, Keep Order
                </button>
                <form asp-action="Cancel" asp-route-id="@Model.SalesOrderId" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check-lg"></i> Yes, Cancel Order
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/salesorder.css" />
    <style>
        @@media print {
            .btn, .page-header p, .card-header .btn {
                display: none !important;
            }

            /* Hide sidebar and adjust layout for print */
            .sidebar {
                display: none !important;
            }

            .main-content {
                margin-left: 0 !important;
                padding: 20px !important;
            }

            .card {
                border: none !important;
                box-shadow: none !important;
            }

            /* Prevent page breaks */
            .detail-section {
                page-break-inside: avoid;
            }
        }

        /* Custom modal styling */
        .modal-content {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }

        .modal-header {
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            border-bottom: none;
        }

        .modal-footer {
            border-top: 1px solid #dee2e6;
            padding: 1rem 1.5rem;
        }
    </style>
}
