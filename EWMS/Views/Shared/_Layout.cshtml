EWMS\Views\Shared\_Layout.cshtml
@using System.Security.Claims
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EWMS Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EWMSDashboard.styles.css" asp-append-version="true" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background-color: #f8f9fa;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 260px;
            background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
            color: white;
            padding: 0;
            z-index: 1000;
            overflow-y: auto;
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar-header {
            padding: 25px 20px;
            background: rgba(0,0,0,0.2);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

            .sidebar-header h3 {
                margin: 0;
                font-size: 1.5rem;
                font-weight: 700;
            }

        .sidebar-menu {
            padding: 20px 0;
        }

        .sidebar-menu-item {
            padding: 15px 25px;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: space-between;
            transition: all 0.3s;
            border-left: 4px solid transparent;
            cursor: pointer;
        }

            .sidebar-menu-item:hover {
                background: rgba(255,255,255,0.1);
                color: white;
                border-left-color: #3498db;
            }

            .sidebar-menu-item.active {
                background: rgba(255,255,255,0.15);
                color: white;
                border-left-color: #3498db;
            }

            .sidebar-menu-item i.menu-icon {
                font-size: 1.2rem;
                width: 30px;
            }

            .sidebar-menu-item i.arrow {
                transition: transform 0.3s;
            }

            .sidebar-menu-item.expanded i.arrow {
                transform: rotate(90deg);
            }

        /* Submenu */
        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
            background: rgba(0,0,0,0.2);
        }

            .submenu.show {
                max-height: 1000px;
            }

        .submenu-item {
            padding: 12px 25px 12px 60px;
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            display: block;
            transition: all 0.3s;
            border-left: 4px solid transparent;
        }

            .submenu-item:hover {
                background: rgba(255,255,255,0.1);
                color: white;
                border-left-color: #3498db;
            }

            .submenu-item.active {
                background: rgba(255,255,255,0.15);
                color: white;
                border-left-color: #3498db;
            }

        /* Location sub-items (level 2 inside submenu) */
        .submenu-location-item {
            padding: 9px 25px 9px 75px;
            color: rgba(255,255,255,0.6);
            text-decoration: none;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s;
            border-left: 4px solid transparent;
            font-size: 0.88rem;
        }

            .submenu-location-item:hover {
                background: rgba(255,255,255,0.08);
                color: white;
                border-left-color: #3498db;
            }

            .submenu-location-item.active {
                background: rgba(255,255,255,0.12);
                color: white;
                border-left-color: #3498db;
            }
        .sidebar-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 20px;
            background: rgba(0,0,0,0.2);
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .main-content {
            margin-left: 260px;
            padding: 30px;
            min-height: 100vh;
        }

        .topbar {
            background: white;
            padding: 20px 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-title {
            margin: 0;
            font-size: 1.8rem;
            font-weight: 700;
            color: #2c3e50;
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 0;
                overflow: hidden;
            }

                .sidebar.show {
                    width: 260px;
                }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h3><i class="bi bi-building"></i> EWMS</h3>
            <small style="opacity: 0.7;">@(User.FindFirst("WarehouseName")?.Value ?? "Enterprise Warehouse System")</small>
        </div>

        <div class="sidebar-menu">
            <a href="@Url.Action("InventoryDashboard", "InventoryDashboard")"
               class="sidebar-menu-item">
                <div>
                    <i class="bi bi-speedometer2 menu-icon"></i>
                    <span>Dashboard</span>
                </div>
            </a>

            <a href="@Url.Action("Index", "Product")" class="sidebar-menu-item">
                <div>
                    <i class="bi bi-box-seam menu-icon"></i>
                    <span>Products</span>
                </div>
            </a>

            <a href="@Url.Action("Index", "Transfer")" class="sidebar-menu-item">
                <div>
                    <i class="bi bi-arrow-left-right menu-icon"></i>
                    <span>Transfer</span>
                </div>
            </a>

            <a href="@Url.Action("Index", "StockIn")"
               class="sidebar-menu-item">
                <div>
                    <i class="bi bi-box-arrow-in-down menu-icon"></i>
                    <span>Stock In</span>
                </div>
            </a>

            <a href="@Url.Action("History", "StockIn")"
               class="sidebar-menu-item">
                <div>
                    <i class="bi bi-clock-history menu-icon"></i>
                    <span>Stock In History</span>
                </div>
            </a>

            <a href="@Url.Action("Index", "StockOutReceipt")"
               class="sidebar-menu-item">
                <div>
                    <i class="bi bi-box-arrow-up menu-icon"></i>
                    <span>Stock Out</span>
                </div>
            </a>

            <a href="@Url.Action("History", "StockOutReceipt")"
               class="sidebar-menu-item">
                <div>
                    <i class="bi bi-clock-history menu-icon"></i>
                    <span>Stock Out History</span>
                </div>
            </a>

            <!-- Inventory with Submenu -->
            <div class="sidebar-menu-item" id="stock-menu" onclick="toggleSubmenu('stock-submenu')">
                <div>
                    <i class="bi bi-boxes menu-icon"></i>
                    <span>Inventory</span>
                </div>
                <i class="bi bi-chevron-right arrow"></i>
            </div>
            <div class="submenu" id="stock-submenu">
                <!-- JS will render rack items here -->
                <div id="nav-stock-items">
                    <div class="submenu-item" style="opacity:0.5;">
                        <i class="bi bi-arrow-clockwise me-2"></i>Loading...
                    </div>
                </div>
            </div>

            @* Users (Admin only) *@
            @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Index", "Users")" class="sidebar-menu-item">
                    <div>
                        <i class="bi bi-people menu-icon"></i>
                        <span>Users</span>
                    </div>
                </a>
            }
        </div>

        <div class="sidebar-footer">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <div class="user-info">
                    <div class="user-avatar">
                        <i class="bi bi-person"></i>
                    </div>
                    <div>
                        <div style="font-weight: 600; font-size: 0.9rem;">@(User.FindFirst(ClaimTypes.GivenName)?.Value ?? User.Identity?.Name)</div>
                        <small style="opacity: 0.7;">@User.FindFirst(ClaimTypes.Role)?.Value</small>
                    </div>
                </div>
                <div class="mt-3">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-grid">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-light w-100">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="mt-3">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-sm btn-outline-light w-100">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Toggle Inventory submenu
        function toggleSubmenu(submenuId) {
            const submenu = document.getElementById(submenuId);
            const menuItem = document.getElementById('stock-menu');
            submenu.classList.toggle('show');
            menuItem.classList.toggle('expanded');
        }

        // Load Rack list into nav - runs on ALL pages
        document.addEventListener('DOMContentLoaded', async function () {
            const currentPath = window.location.pathname;
            const params = new URLSearchParams(window.location.search);
            const activeRack = params.get('rack');

            // Auto expand submenu if on Stock page
            if (currentPath.toLowerCase().includes('/stock')) {
                document.getElementById('stock-submenu').classList.add('show');
                document.getElementById('stock-menu').classList.add('expanded');
            }

            // Fetch Rack list from API
            try {
                const res = await fetch('/Stock/GetRacksForNav');
                const racks = await res.json();

                const navContainer = document.getElementById('nav-stock-items');
                if (!navContainer || !racks || racks.error) return;

                navContainer.innerHTML = '';

                racks.forEach(rack => {
                    // Wrapper for rack link + child locations
                    const wrapper = document.createElement('div');

                    // Rack link
                    const rackLink = document.createElement('a');
                    rackLink.href = '#';
                    rackLink.className = 'submenu-item d-flex justify-content-between align-items-center';
                    rackLink.id = `nav-rack-${rack.rack}`;

                    // Highlight if currently active
                    if (currentPath.toLowerCase().includes('/stock') && activeRack === rack.rack) {
                        rackLink.classList.add('active');
                    }

                    rackLink.innerHTML = `
                        <span><i class="bi bi-grid me-2"></i>Rack ${rack.rack}</span>
                        <i class="bi bi-chevron-down" id="nav-chevron-${rack.rack}" style="font-size:0.75rem; transition: transform 0.3s;"></i>
                    `;

                    // Click rack → navigate to Stock page with corresponding rack
                    rackLink.addEventListener('click', function (e) {
                        e.preventDefault();
                        window.location.href = `/Stock/Index?rack=${rack.rack}`;
                    });

                    // Locations container (hidden by default)
                    const locContainer = document.createElement('div');
                    locContainer.id = `nav-loc-container-${rack.rack}`;
                    locContainer.style.display = 'none';
                    locContainer.style.background = 'rgba(0,0,0,0.15)';

                    wrapper.appendChild(rackLink);
                    wrapper.appendChild(locContainer);
                    navContainer.appendChild(wrapper);
                });

                // If on Stock page with activeRack → load its locations into nav
                if (currentPath.toLowerCase().includes('/stock') && activeRack) {
                    await loadNavLocationsLayout(activeRack);
                }

            } catch (e) {
                console.error('Nav rack load failed:', e);
                const navContainer = document.getElementById('nav-stock-items');
                if (navContainer) {
                    navContainer.innerHTML = '<div class="submenu-item" style="opacity:0.5;">Failed to load</div>';
                }
            }
        });

        // Load rack locations into nav (used in _Layout, independent of Stock.js)
        async function loadNavLocationsLayout(rack) {
            try {
                const res = await fetch(`/Stock/GetLocationsForNav?rack=${rack}`);
                const locations = await res.json();
                if (!locations || locations.error) return;

                const locContainer = document.getElementById(`nav-loc-container-${rack}`);
                const chevron = document.getElementById(`nav-chevron-${rack}`);
                const rackLink = document.getElementById(`nav-rack-${rack}`);
                if (!locContainer) return;

                locContainer.innerHTML = '';
                locContainer.style.display = 'block';
                if (chevron) chevron.style.transform = 'rotate(180deg)';
                if (rackLink) rackLink.classList.add('active');

                const params = new URLSearchParams(window.location.search);
                const activeRack = params.get('rack');

                locations.forEach(loc => {
                    const a = document.createElement('a');
                    a.href = '#';
                    a.className = 'submenu-location-item';
                    a.id = `nav-layout-loc-${loc.locationId}`;

                    const utilizationPercent = loc.capacity > 0
                        ? Math.round(loc.currentStock / loc.capacity * 100) : 0;
                    const badgeColor = utilizationPercent > 80 ? 'bg-danger'
                        : utilizationPercent > 50 ? 'bg-warning' : 'bg-success';

                    a.innerHTML = `
                        <span><i class="bi bi-geo-alt me-1"></i>${loc.locationCode}</span>
                        <span class="badge ${badgeColor}" style="font-size:0.65rem;">${utilizationPercent}%</span>
                    `;

                    // Click location → call selectLocation if Stock.js is loaded, else navigate
                    a.addEventListener('click', function (e) {
                        e.preventDefault();
                        if (typeof selectLocation === 'function') {
                            // On Stock page → use JS directly
                            document.querySelectorAll('.submenu-location-item').forEach(el => el.classList.remove('active'));
                            a.classList.add('active');
                            selectLocation(loc.locationId, loc.locationCode, rack);
                        } else {
                            window.location.href = `/Stock/Index?rack=${rack}`;
                        }
                    });

                    locContainer.appendChild(a);
                });

            } catch (e) {
                console.error('Nav locations load failed:', e);
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


