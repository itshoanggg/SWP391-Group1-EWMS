<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EWMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EWMS.styles.css" asp-append-version="true" />
</head>
<body>
    @* Sidebar *@
    <div class="sidebar">
        <div class="sidebar-header">
            <h3><i class="bg-info bi-building"></i> EWMS</h3>
            <small style="opacity: 0.7;">Enterprise Warehouse System</small>
        </div>

        <div class="sidebar-menu">
            <a href="#" class="sidebar-menu-item active">
				<i class="bi bi-house-door-fill"></i>
				<span>Dashboard</span>
            </a>
			<a href="#" class="sidebar-menu-item">
				<i class="bi bi-box-seam"></i>
                <span>Sales Orders</span>
            </a>
            <a href="#" class="sidebar-menu-item">
                <i class="bi bi-cart-plus"></i>
                <span>Purchase Requests</span>
            </a>
        </div>

        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">
                    <i class="bi bi-person"></i>
                </div>
            </div>

            <div>
                <div style="font-weight: 600; font-size: 0.9rem;">Sales Staff</div>
                <small style="opacity: 0.7;">Warehouse 1</small>
            </div>
        </div>

        <div class="mt-3">
            <a href="#" class="btn btn-sm btn-outline-light w-100">
                <i class="bi bi-box-arrow-right">Logout</i>
            </a>
        </div>
    </div>

    @* Main Content *@
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
