@{
    ViewData["Title"] = "Inventory Management";
    var warehouseId = ViewBag.WarehouseId;
    var defaultRack = ViewBag.DefaultRack ?? "A";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-boxes"></i> Inventory Management</h2>
            <small class="text-muted">
                Rack <strong id="header-rack">@defaultRack</strong> ›
                Location <strong id="header-location">--</strong>
            </small>
        </div>
        <button class="btn btn-primary" onclick="refreshAll()">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>

    <!-- Products Section -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-box-seam"></i> Stock Products –
                <span id="current-location-title">Select a location from the left menu</span>
            </h5>
            <span class="badge bg-secondary" id="product-count-badge"></span>
        </div>
        <div class="card-body">
            <div id="products-container">
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-arrow-left-circle" style="font-size: 3rem;"></i>
                    <p class="mt-3">Select a Rack and Location from the left menu</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Assign global variables BEFORE loading Stock.js
        window.warehouseId = @warehouseId;
        window.selectedRack = '@defaultRack';

        if (!window.warehouseId || window.warehouseId === 0) {
            alert('Error: Warehouse could not be identified!');
            console.error('WarehouseId is undefined or 0');
        }

        console.log('Stock page initialized:', { warehouseId: window.warehouseId, selectedRack: window.selectedRack });
    </script>
    <script src="~/js/Stock/Stock.js"></script>
}
