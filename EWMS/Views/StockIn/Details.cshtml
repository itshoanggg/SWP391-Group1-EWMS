@model EWMS.Models.PurchaseOrder

@{
    ViewData["Title"] = "Chi tiết Phiếu Nhập";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Inventory/StockInDetails.css" />
}

<div class="container-fluid">
    <!-- Header -->
    <div class="header-section">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <a href="@Url.Action("Index", "StockIn")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h2 class="mb-0">Chi tiết Nhập Kho</h2>
                    <small class="text-muted">Xác nhận hàng thực tế theo đơn đặt hàng PO-@Model.PurchaseOrderId</small>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-secondary" onclick="window.print()">
                    <i class="fas fa-print"></i> In nhãn SKU
                </button>
                <button class="btn btn-warning" id="btn-save-draft">
                    <i class="fas fa-save"></i> Hủy bỏ
                </button>
                <button class="btn btn-success" id="btn-confirm" onclick="confirmStockIn()">
                    <i class="fas fa-check-circle"></i> Xác nhận nhập kho
                </button>
            </div>
        </div>
    </div>

    <!-- PO Information -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card info-card">
                <div class="card-header">
                    <i class="fas fa-file-invoice"></i> Thông tin PO
                </div>
                <div class="card-body">
                    <div class="info-row">
                        <span class="label">Số đơn hàng:</span>
                        <span class="value" id="po-number">PO-@Model.PurchaseOrderId</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Ngày đặt:</span>
                        <span class="value" id="po-date">12/09/2023</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Người phụ trách:</span>
                        <span class="value" id="po-creator">@(Model.CreatedByNavigation.FullName ?? Model.CreatedByNavigation.Username)</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card info-card">
                <div class="card-header">
                    <i class="fas fa-truck"></i> Nhà cung cấp
                </div>
                <div class="card-body">
                    <div class="info-row">
                        <span class="label">Tên:</span>
                        <span class="value" id="supplier-name">@Model.Supplier.SupplierName</span>
                    </div>
                    <div class="info-row">
                        <span class="label">Mã NCC:</span>
                        <span class="value" id="supplier-code">NCC-@Model.Supplier.SupplierId</span>
                    </div>
                    <div class="info-row">
                        <span class="label">SĐT:</span>
                        <span class="value" id="supplier-phone">@Model.Supplier.Phone</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card">
        <div class="card-header">
            <i class="fas fa-boxes"></i> Danh sách sản phẩm
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="products-table">
                    <thead>
                        <tr>
                            <th style="width: 10%">SKU</th>
                            <th style="width: 25%">TÊN SẢN PHẨM</th>
                            <th style="width: 10%">SL ĐẶT</th>
                            <th style="width: 10%">SL THỰC NHẬN</th>
                            <th style="width: 20%">VỊ TRÍ LƯU KHO</th>
                            <th style="width: 15%">THAO TÁC</th>
                        </tr>
                    </thead>
                    <tbody id="products-tbody">
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Đang tải...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-6">
                    <div class="summary-item">
                        <span>Tổng mã SKU:</span>
                        <strong id="total-sku">0</strong>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="summary-item">
                        <span>Tổng SL Đặt:</span>
                        <strong id="total-ordered">0</strong>
                    </div>
                    <div class="summary-item">
                        <span>Tổng SL Thực Nhận:</span>
                        <strong id="total-received" class="text-primary">0</strong>
                    </div>
                    <div class="summary-item">
                        <span>Tình trạng:</span>
                        <strong id="receipt-status" class="text-warning">Thiếu 5 sản phẩm</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Location Selection Modal -->
<div class="modal fade" id="locationModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chọn vị trí lưu kho</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    Sản phẩm: <strong id="modal-product-name"></strong><br />
                    Số lượng cần lưu: <strong id="modal-quantity"></strong>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Mã vị trí</th>
                                <th>Tên vị trí</th>
                                <th>Giá</th>
                                <th>Tồn hiện tại</th>
                                <th>Chọn</th>
                            </tr>
                        </thead>
                        <tbody id="locations-tbody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const purchaseOrderId = @Model.PurchaseOrderId;
        const warehouseId = @ViewBag.WarehouseId;
        const userId = @ViewBag.UserId;
    </script>
    <script src="~/js/Inventory/StockInDetails.js"></script>
}
