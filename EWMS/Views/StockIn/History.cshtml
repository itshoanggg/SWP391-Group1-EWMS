@{
    ViewData["Title"] = "Stock-In History";
    var warehouseId = ViewBag.WarehouseId;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Inventory/StockIn.css" />
}

<div class="container-fluid">
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle"></i>
        <strong>Note:</strong> This page shows purchase orders with status <span class="badge bg-dark">Received</span> or <span class="badge bg-danger">Cancelled</span>.
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Search:</label>
                    <input type="text" class="form-control" id="search-input"
                           placeholder="Search by order number or supplier...">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" onclick="loadHistoryPurchaseOrders()">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <div class="d-flex align-items-center gap-2 w-100 justify-content-end">
                        <label class="mb-0 text-muted page-size-label">
                            <i class="fas fa-layer-group"></i> Show:
                        </label>
                        <select class="form-select form-select-sm" id="page-size-select" onchange="changePageSize()">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        <span class="text-muted page-size-label">entries</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                <h5 class="mb-0">
                    <i class="fas fa-list-ul text-primary"></i> Historical Purchase Orders
                </h5>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="purchase-orders-table">
                    <thead>
                        <tr>
                            <th width="10%">ORDER NO.</th>
                            <th width="20%">SUPPLIER</th>
                            <th width="12%">EXPECTED DATE</th>
                            <th width="10%" class="text-end">ORDERED QTY</th>
                            <th width="10%" class="text-end">RECEIVED</th>
                            <th width="18%">STATUS</th>
                            <th width="10%">ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="8" class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <span id="pagination-info" class="d-flex align-items-center gap-2">
                        <i class="fas fa-info-circle text-primary"></i>
                        <span>Showing 0 to 0 of 0 entries</span>
                    </span>
                </div>
                <nav aria-label="Table pagination">
                    <div id="pagination-controls">
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>

<script>
    const warehouseId = @warehouseId;
</script>
<script src="~/js/Inventory/StockInHistory.js"></script>
