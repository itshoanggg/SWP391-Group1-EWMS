@{
    ViewData["Title"] = "Quản Lý Nhập Kho";
    var warehouseId = ViewBag.WarehouseId;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-warehouse"></i> Quản Lý Nhập Kho</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Info Alert -->
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle"></i>
        <strong>Hướng dẫn:</strong> Chỉ có thể nhập kho cho đơn hàng có trạng thái <span class="badge bg-success">Đã về kho</span> hoặc <span class="badge bg-primary">Nhận một phần</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Trạng thái:</label>
                    <select class="form-select" id="filter-status">
                        <option value="">Tất cả</option>
                        <option value="InTransit">Đang vận chuyển</option>
                        <option value="Delivered" >Đã về kho</option>
                        <option value="PartiallyReceived">Nhận một phần</option>
                        <option value="Received">Đã nhận đủ</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Tìm kiếm:</label>
                    <input type="text" class="form-control" id="search-input"
                           placeholder="Tìm theo mã đơn hoặc nhà cung cấp...">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" onclick="loadPurchaseOrders()">
                        <i class="fas fa-sync-alt"></i> Làm mới
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Purchase Orders Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Danh Sách Đơn Hàng</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="purchase-orders-table">
                    <thead>
                        <tr>
                            <th width="10%">MÃ ĐƠN</th>
                            <th width="20%">NHÀ CUNG CẤP</th>
                            <th width="12%">NGÀY DỰ KIẾN</th>
                            <th width="10%" class="text-end">SỐ LƯỢNG</th>
                            <th width="10%" class="text-end">ĐÃ NHẬN</th>
                            <th width="10%" class="text-end">CÒN LẠI</th>
                            <th width="18%">TRẠNG THÁI</th>
                            <th width="10%">THAO TÁC</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="8" class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Đang tải...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    const warehouseId = @warehouseId;

    if (!warehouseId) {
        console.error('WarehouseId is not defined!');
        alert('Lỗi: Không xác định được kho. Vui lòng đăng nhập lại.');
    }
</script>
<script src="~/js/Inventory/StockIn.js"></script>

<style>
    .table tbody tr.clickable {
        cursor: pointer;
    }

    .table tbody tr.clickable:hover {
        background-color: #e3f2fd;
    }

    .table tbody tr.disabled {
        cursor: not-allowed;
        opacity: 0.6;
    }

    .table tbody tr.disabled:hover {
        background-color: transparent;
    }

    .badge {
        padding: 0.5rem 0.8rem;
        font-size: 0.85rem;
    }
</style>
