@model EWMS.ViewModels.StockOutReceiptListViewModel
@{
    ViewData["Title"] = "Stock Out Receipt History";
}

@section Styles {
    <link rel="stylesheet" href="~/css/stockoutreceipt.css" asp-append-version="true" />
}

<div class="page-header">
    <h1>Stock Out Receipt History</h1>
    <p>View all created stock out receipts</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h3>Stock Out Receipt List</h3>
        <form method="get" class="filter-section">
            <div class="filter-group">
                <label>From Date</label>
                <input type="date" name="dateFrom" class="form-control form-control-sm" value="@(Model.DateFrom?.ToString("yyyy-MM-dd"))">
            </div>
            <div class="filter-group">
                <label>To Date</label>
                <input type="date" name="dateTo" class="form-control form-control-sm" value="@(Model.DateTo?.ToString("yyyy-MM-dd"))">
            </div>
            <div class="filter-group">
                <label>Customer</label>
                <input type="text" name="customer" class="form-control form-control-sm" placeholder="Name or phone" value="@Model.FilterCustomer">
            </div>
            <div class="filter-group">
                <label>Issued By</label>
                <input type="text" name="issuedBy" class="form-control form-control-sm" placeholder="Issuer name" value="@Model.FilterIssuedBy">
            </div>
            <div class="filter-group align-self-end">
                <button type="submit" class="btn btn-primary btn-sm">Apply</button>
                <a class="btn btn-secondary btn-sm" href="@Url.Action("History", "StockOutReceipt")">Clear</a>
            </div>
        </form>
    </div>

    <div class="table-container">
        <table class="table" id="receiptsTable">
            <thead>
                <tr>
                    <th>Receipt ID</th>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Issue Date</th>
                    <th>Reason</th>
                    <th>Status</th>
                    <th>Total Amount</th>
                    <th>Issued By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Receipts != null && Model.Receipts.Any())
                {
                    @foreach (var receipt in Model.Receipts)
                    {
                        <tr data-issued="@(receipt.IssuedDate?.ToString("yyyy-MM-dd") ?? "")">
                            <td><strong>@receipt.ReceiptNumber</strong></td>
                            <td>
                                @if (receipt.OrderNumber != null)
                                {
                                    <a href="@Url.Action("Details", "SalesOrder", new { id = receipt.SalesOrderId })">
                                        @receipt.OrderNumber
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>@receipt.CustomerName</td>
                            <td>@(receipt.IssuedDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>@receipt.Reason</td>
                            <td>
                                @if (!string.IsNullOrEmpty(receipt.Status))
                                {
                                    <span class="badge 
                                        @(receipt.Status == "Pending" ? "bg-warning text-dark" : 
                                          receipt.Status == "Completed" ? "bg-success" : 
                                          receipt.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                                        @receipt.Status
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td><strong>@((receipt.TotalAmount ?? 0).ToString("N0")) Ä‘</strong></td>
                            <td>@receipt.IssuedByName</td>
                            <td>
                                <a href="@Url.Action("Details", new { id = receipt.StockOutId })" 
                                   class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-5">
                            <i class="bi bi-inbox" style="font-size: 48px; opacity: 0.3;"></i>
                            <p class="mt-2 mb-0">No stock out receipts found</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<nav aria-label="Receipts pagination" class="mt-3">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
            <a class="page-link" asp-action="History"
               asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
               asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
               asp-route-customer="@Model.FilterCustomer"
               asp_route_issuedBy="@Model.FilterIssuedBy"
               asp-route-page="@(Model.Page - 1)">Previous</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : "")">
                <a class="page-link" asp-action="History"
                   asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
                   asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
                   asp-route-customer="@Model.FilterCustomer"
                   asp-route-issuedBy="@Model.FilterIssuedBy"
                   asp-route-page="@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="History"
               asp-route-dateFrom="@(Model.DateFrom?.ToString("yyyy-MM-dd"))"
               asp-route-dateTo="@(Model.DateTo?.ToString("yyyy-MM-dd"))"
               asp-route-customer="@Model.FilterCustomer"
               asp-route-issuedBy="@Model.FilterIssuedBy"
               asp-route-page="@(Model.Page + 1)">Next</a>
        </li>
    </ul>
</nav>

@section Scripts {
    <script>
    </script>
}
