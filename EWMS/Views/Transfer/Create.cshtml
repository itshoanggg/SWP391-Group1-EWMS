@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var warehouses = ViewBag.Warehouses as List<EWMS.Models.Warehouse>;
    var products = ViewBag.Products as List<EWMS.Models.Product>;
}

<div class="p-8">
    <h2 class="text-2xl font-bold mb-6">Create Transfer Request</h2>

    <form asp-action="Create" method="post" class="space-y-6 bg-white p-6 rounded-xl shadow">
        <div class="grid grid-cols-2 gap-4">
            <div>
                <label class="block font-semibold mb-2">Source Warehouse</label>
                <select name="FromWarehouseId" class="w-full border rounded-lg p-3">
                    @foreach (var w in warehouses)
                    {
                        <option value="@w.WarehouseId">@w.WarehouseName</option>
                    }
                </select>
            </div>

            <div>
                <label class="block font-semibold mb-2">Destination Warehouse</label>
                <select name="ToWarehouseId" class="w-full border rounded-lg p-3">
                    @foreach (var w in warehouses)
                    {
                        <option value="@w.WarehouseId">@w.WarehouseName</option>
                    }
                </select>
            </div>
        </div>

        <div>
            <label class="block font-semibold mb-2">Transfer Type</label>
            <select name="TransferType" class="w-full border rounded-lg p-3">
                <option value="Internal">Internal</option>
                <option value="Return">Return</option>
                <option value="Damage">Damage</option>
            </select>
        </div>

        <div>
            <label class="block font-semibold mb-2">Product</label>
            <select name="ProductID" class="w-full border rounded-lg p-3">
                @foreach (var p in products)
                {
                    <option value="@p.ProductId">@p.ProductName</option>
                }
            </select>
        </div>

        <div>
            <label class="block font-semibold mb-2">Quantity</label>
            <input type="number" name="Quantity" class="w-full border rounded-lg p-3" min="1" required />
        </div>

        <div>
            <label class="block font-semibold mb-2">Reason</label>
            <textarea name="Reason" class="w-full border rounded-lg p-3"></textarea>
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg">
            Create Transfer
        </button>
    </form>
</div>
