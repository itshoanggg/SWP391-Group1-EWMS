@model EWMS.Models.TransferRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-6">
    <h2 class="text-2xl font-bold mb-4">Transfer #@Model.TransferId</h2>

    <div class="mb-6">
        <p><strong>From:</strong> @Model.FromWarehouse?.WarehouseName</p>
        <p><strong>To:</strong> @Model.ToWarehouse?.WarehouseName</p>
        <p><strong>Type:</strong> @Model.TransferType</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Requested By:</strong> @Model.RequestedByNavigation?.FullName</p>
        <p><strong>Requested Date:</strong> @Model.RequestedDate?.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Reason:</strong> @Model.Reason</p>
    </div>

    <h3 class="text-xl font-semibold mb-2">Items</h3>
    <table class="w-full border-collapse">
        <thead>
            <tr>
                <th class="border p-2">Product</th>
                <th class="border p-2">Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.TransferDetails)
            {
                <tr>
                    <td class="border p-2">@d.Product?.ProductName</td>
                    <td class="border p-2">@d.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a class="text-blue-600" href="@Url.Action("Index", "Transfer")">Back to list</a>
    </div>
</div>
