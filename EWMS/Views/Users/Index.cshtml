@model IEnumerable<EWMS.ViewModels.UserListItemViewModel>
@{
    ViewData["Title"] = "User Management";
}

<style>
    .page-header {
        margin-bottom: 2rem;
    }
    .page-header h2 {
        margin: 0;
        font-weight: 600;
        font-size: 1.75rem;
        color: #2c3e50;
    }
    .page-header p {
        margin: 0.5rem 0 0 0;
        color: #6c757d;
    }
    .table thead th {
        background: #f8f9fa;
        border: none;
        color: #495057;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
        padding: 15px;
    }
    .table tbody td {
        padding: 15px;
        vertical-align: middle;
        border-color: #f1f3f5;
    }
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
    .badge-role {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        border: 1px solid;
    }
    .badge-admin { 
        background: #667eea; 
        color: white; 
        border-color: #667eea;
    }
    .badge-warehouse { 
        background: #f8f9fa; 
        color: #495057; 
        border-color: #dee2e6;
    }
    .badge-sales { 
        background: #f8f9fa; 
        color: #495057; 
        border-color: #dee2e6;
    }
    .badge-purchasing { 
        background: #f8f9fa; 
        color: #495057; 
        border-color: #dee2e6;
    }
    .badge-inventory { 
        background: #f8f9fa; 
        color: #495057; 
        border-color: #dee2e6;
    }
    .badge-active {
        display: inline-flex;
        align-items: center;
        padding: 4px 10px;
        border-radius: 15px;
        font-size: 11px;
        font-weight: 600;
    }
    .badge-active.active {
        background: #d4edda;
        color: #155724;
    }
    .badge-active.inactive {
        background: #f8d7da;
        color: #721c24;
    }
    .action-btn {
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 13px;
        font-weight: 500;
        margin-right: 5px;
        transition: all 0.2s ease;
        border: 1px solid;
        background: white;
        text-decoration: none;
        display: inline-block;
    }
    .action-btn:hover {
        text-decoration: none;
        transform: translateY(-1px);
    }
    .btn-edit {
        color: #0d6efd;
        border-color: #0d6efd;
    }
    .btn-edit:hover {
        background: #0d6efd;
        color: white;
    }
    .btn-delete {
        color: #dc3545;
        border-color: #dc3545;
    }
    .btn-delete:hover {
        background: #dc3545;
        color: white;
    }
    .alert-success {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        border: none;
        border-left: 4px solid #28a745;
        border-radius: 8px;
        padding: 15px 20px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="page-header">
        <h2><i class="fas fa-users-cog me-2"></i>User Management</h2>
        <p>Manage system users and permissions</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add New User
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mb-4">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-4">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">User List</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th><i class="fas fa-user me-2"></i>Username</th>
                <th><i class="fas fa-id-card me-2"></i>Full Name</th>
                <th><i class="fas fa-envelope me-2"></i>Email</th>
                <th><i class="fas fa-phone me-2"></i>Phone</th>
                <th><i class="fas fa-shield-alt me-2"></i>Role</th>
                <th><i class="fas fa-warehouse me-2"></i>Departments</th>
                <th><i class="fas fa-toggle-on me-2"></i>Status</th>
                <th style="width:200px"><i class="fas fa-cogs me-2"></i>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                var roleClass = u.RoleName.ToLower() switch
                {
                    "admin" => "badge-admin",
                    var r when r.Contains("warehouse") => "badge-warehouse",
                    var r when r.Contains("sales") => "badge-sales",
                    var r when r.Contains("purchasing") => "badge-purchasing",
                    var r when r.Contains("inventory") => "badge-inventory",
                    _ => "badge-secondary"
                };
                <tr>
                    <td><strong>@u.Username</strong></td>
                    <td>@u.FullName</td>
                    <td><small class="text-muted">@u.Email</small></td>
                    <td><small class="text-muted">@u.Phone</small></td>
                    <td><span class="badge-role @roleClass">@u.RoleName</span></td>
                    <td><small>@string.Join(", ", u.Warehouses)</small></td>
                    <td>
                        <span class="badge-active @(u.IsActive ? "active" : "inactive")">
                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>
                            @(u.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td class="text-nowrap">
                        <a asp-action="Edit" asp-route-id="@u.UserId" class="btn btn-sm btn-primary" title="Edit User">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@u.UserId" method="post" class="d-inline" onsubmit="return confirm('⚠️ Are you sure you want to delete this user?\n\nUsername: @u.Username\nName: @u.FullName\n\nThis action cannot be undone!');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" title="Delete User">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
            </table>
        </div>
    </div>
</div>
