@model IEnumerable<EWMS.ViewModels.UserListItemViewModel>
@{
    ViewData["Title"] = "User Management";
}

<style>
    .admin-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }
    .admin-header h2 {
        margin: 0;
        font-weight: 600;
        font-size: 28px;
    }
    .btn-add-user {
        background: white;
        color: #667eea;
        border: none;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .btn-add-user:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        color: #667eea;
    }
    .users-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        overflow: hidden;
    }
    .table thead th {
        background: #f8f9fa;
        border: none;
        color: #495057;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 12px;
        letter-spacing: 0.5px;
        padding: 15px;
    }
    .table tbody td {
        padding: 15px;
        vertical-align: middle;
        border-color: #f1f3f5;
    }
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
    .badge-role {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        border: 1px solid;
    }
    .badge-admin { 
        background: #667eea; 
        color: white; 
        border-color: #667eea;
    }
    .badge-warehouse { 
        background: #f8f9fa; 
        color: #495057; 
        border-color: #dee2e6;
    }
    .badge-sales { 
        background: #f8f9fa; 
        color: #495057; 
        border-color: #dee2e6;
    }
    .badge-purchasing { 
        background: #f8f9fa; 
        color: #495057; 
        border-color: #dee2e6;
    }
    .badge-inventory { 
        background: #f8f9fa; 
        color: #495057; 
        border-color: #dee2e6;
    }
    .badge-active {
        display: inline-flex;
        align-items: center;
        padding: 4px 10px;
        border-radius: 15px;
        font-size: 11px;
        font-weight: 600;
    }
    .badge-active.active {
        background: #d4edda;
        color: #155724;
    }
    .badge-active.inactive {
        background: #f8d7da;
        color: #721c24;
    }
    .action-btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 13px;
        font-weight: 500;
        margin: 2px;
        transition: all 0.2s ease;
        border: 1px solid #dee2e6;
        background: white;
        color: #495057;
    }
    .action-btn:hover {
        background: #f8f9fa;
        border-color: #adb5bd;
    }
    .btn-edit:hover {
        border-color: #0d6efd;
        color: #0d6efd;
    }
    .btn-role:hover {
        border-color: #6c757d;
        color: #6c757d;
    }
    .btn-dept:hover {
        border-color: #fd7e14;
        color: #fd7e14;
    }
    .btn-delete {
        color: #dc3545;
        border-color: #dc3545;
    }
    .btn-delete:hover {
        background: #dc3545;
        color: white;
    }
    .alert-success {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        border: none;
        border-left: 4px solid #28a745;
        border-radius: 8px;
        padding: 15px 20px;
    }
</style>

<div class="admin-header d-flex justify-content-between align-items-center">
    <div>
        <h2><i class="fas fa-users-cog me-2"></i>User Management</h2>
        <p class="mb-0 mt-2" style="opacity: 0.9;">Manage system users and permissions</p>
    </div>
    <a asp-action="Create" class="btn-add-user">
        <i class="fas fa-plus-circle me-2"></i>Add New User
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mb-4">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mb-4">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
    </div>
}

<div class="users-card">
    <table class="table table-hover mb-0">
        <thead>
            <tr>
                <th><i class="fas fa-user me-2"></i>Username</th>
                <th><i class="fas fa-id-card me-2"></i>Full Name</th>
                <th><i class="fas fa-envelope me-2"></i>Email</th>
                <th><i class="fas fa-phone me-2"></i>Phone</th>
                <th><i class="fas fa-shield-alt me-2"></i>Role</th>
                <th><i class="fas fa-warehouse me-2"></i>Departments</th>
                <th><i class="fas fa-toggle-on me-2"></i>Status</th>
                <th style="width:300px"><i class="fas fa-cogs me-2"></i>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                var roleClass = u.RoleName.ToLower() switch
                {
                    "admin" => "badge-admin",
                    var r when r.Contains("warehouse") => "badge-warehouse",
                    var r when r.Contains("sales") => "badge-sales",
                    var r when r.Contains("purchasing") => "badge-purchasing",
                    var r when r.Contains("inventory") => "badge-inventory",
                    _ => "badge-secondary"
                };
                <tr>
                    <td><strong>@u.Username</strong></td>
                    <td>@u.FullName</td>
                    <td><small class="text-muted">@u.Email</small></td>
                    <td><small class="text-muted">@u.Phone</small></td>
                    <td><span class="badge-role @roleClass">@u.RoleName</span></td>
                    <td><small>@string.Join(", ", u.Warehouses)</small></td>
                    <td>
                        <span class="badge-active @(u.IsActive ? "active" : "inactive")">
                            <i class="fas fa-circle me-1" style="font-size: 8px;"></i>
                            @(u.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@u.UserId" class="action-btn btn-edit" title="Edit User">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="AssignRoles" asp-route-id="@u.UserId" class="action-btn btn-role" title="Assign Role">
                            <i class="fas fa-user-tag"></i>
                        </a>
                        <a asp-action="AssignDepartments" asp-route-id="@u.UserId" class="action-btn btn-dept" title="Assign Departments">
                            <i class="fas fa-building"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@u.UserId" method="post" class="d-inline-block" onsubmit="return confirm('⚠️ Are you sure you want to delete this user?\n\nUsername: @u.Username\nName: @u.FullName\n\nThis action cannot be undone!');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="action-btn btn-delete" title="Delete User">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
